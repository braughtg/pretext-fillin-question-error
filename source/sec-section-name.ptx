<?xml version="1.0" encoding="UTF-8"?>

<section xml:id="sec-section-name" xmlns:xi="http://www.w3.org/2001/XInclude">
  <title>Section Title</title>

  <p> The exercise copied directly from: https://pretextbook.org/examples/sample-book/annotated/fill-in-exercises.html </p>

  <exercise label="fillin-case-insensitive">
    <title>Fill-In, Case-Insensitive Answer</title>
    <statement>
      <p>
        The word <var /> is the opposite of
        <q>yes</q>. (Try a mixture of upper and lower-case letters.)
      </p>
    </statement>
    <setup>
      <var case="insensitive">
  
      <condition string="no">
      <feedback>
        The correct answers are  no, No, nO, and NO.
      </feedback>
      </condition>
      <condition string=".*">
      <feedback>
        Incorrect.
      </feedback>
      </condition>
      </var>
    </setup>
  </exercise>
  

